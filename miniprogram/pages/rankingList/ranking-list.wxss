.ranking-list{
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.ranking-list .bg-img{
  height: 200vh;
  filter: blur(40px);
  transform: scale(1.4);
}
.ranking-top{
  position: absolute;
  left: 0;
  top: 25vw;
  display: flex;
  align-items: center;
  width: 100vw;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.ranking-top .img{
  flex:0 0 300rpx;
  height: 300rpx;
  border-radius: 20rpx;
}
.ranking-top .top-content{
  flex: 1;
  padding-left: 40rpx;
}
.top-content .content-title{
  font-size: 40rpx;
  color: #fff;
  margin-bottom: 32rpx;
}
.top-content .content-name{
  font-size: 32rpx;
  color: rgba(255, 255, 255, .7);
  margin-bottom: 32rpx;
}
.top-content .content-describe{
  font-size: 24rpx;
  color: rgba(255, 255, 255, .3);
}
.ranking-song{
  width: 100vw;
  min-height: 100vh;
  position: absolute;
  left: 0;
  top: 45vh;
  border-radius: 40rpx 40rpx 0 0;
  background-color: #fff;
  padding-top: 20rpx;
}
.list-bai{
  height: 60rpx;
}
.list-bottom{
  font-size: 24rpx;
  text-align: center;
}
